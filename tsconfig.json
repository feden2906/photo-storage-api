{
   "include": ["src/**/*", "**/*.json"],
   "compilerOptions": {
      "lib": [
         "ESNext"
      ],
      "target": "ESNext",
      "allowJs": true,
      "module": "commonjs",
      "strict": false,
      "moduleResolution": "node",
      "outDir": "./dist/src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
   }
}
